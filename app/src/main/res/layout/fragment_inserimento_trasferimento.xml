<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="homeProf.RichiesteLavoro.Inserimento.InserimentoTrasferimentoFragment">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/inputQuantitaTrasferita"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="316dp"
        android:hint="Inserisci il numero di unità trasferite"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/inputValore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="248dp"
        android:hint="Inserisci il valore per una singola unità"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/annoRichiesta"
        android:layout_width="104dp"
        android:layout_height="51dp"
        android:layout_marginStart="152dp"
        android:layout_marginTop="218dp"
        android:hint="anno"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputDipendente" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/meseRichiesta"
        android:layout_width="59dp"
        android:layout_height="51dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="218dp"
        android:hint="mese"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputDipendente" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/giornoRichiesta"
        android:layout_width="59dp"
        android:layout_height="51dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="218dp"
        android:hint="giorno"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputDipendente" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/inputDipendente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="124dp"
        android:hint="inserisci il CF del destinatario"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/InputCommessa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="196dp"
        android:hint="Inserisci il codice della commessa"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewStartRichiestaTrasf"
        android:layout_width="411dp"
        android:layout_height="64dp"
        android:layout_marginTop="60dp"
        android:text="Completa i campi riportati di seguito "
        android:textAlignment="center"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewGiornoRichiesta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="8dp"
        android:text="Giorno"
        app:layout_constraintBottom_toTopOf="@+id/giornoRichiesta"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textViewMeseRichiesta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="76dp"
        android:layout_marginBottom="8dp"
        android:text="Mese"
        app:layout_constraintBottom_toTopOf="@+id/meseRichiesta"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textViewAnnoRichiesta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="176dp"
        android:layout_marginBottom="8dp"
        android:text="Anno"
        app:layout_constraintBottom_toTopOf="@+id/annoRichiesta"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonRichiestaTrasferimento"
        android:layout_width="411dp"
        android:layout_height="70dp"
        android:layout_marginBottom="148dp"
        android:text="Invia la richiesta"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>